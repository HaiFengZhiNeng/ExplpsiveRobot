<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/re_drive"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/task_deep">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

            <TextView
                style="@style/my_text"
                android:text="越障臂"
                />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/my_text"
                android:text="前"
                />

            <TextView
                android:id="@+id/y1"
                style="@style/my_text"
                android:text="上" />

            <TextView
                android:id="@+id/y7"
                style="@style/my_text"
                android:text="下" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/my_text"
                android:text="后"
                />

            <TextView
                android:id="@+id/y3"
                style="@style/my_text"
                android:text="上" />

            <TextView
                android:id="@+id/y9"
                style="@style/my_text"
                android:text="下" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/my_text"
                android:text="前灯"/>

            <ToggleButton
                android:id="@+id/ff"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/main_toggle"
                android:checked="false"
                android:textOff=""
                android:textOn="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/my_text"
                android:text="后灯"/>

            <ToggleButton
                android:id="@+id/rr"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/main_toggle"
                android:checked="false"
                android:textOff=""
                android:textOn="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/my_text"
                android:text="ZZ"/>

            <ToggleButton
                android:id="@+id/zz"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/main_toggle"
                android:checked="false"
                android:textOff=""
                android:textOn="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/my_text"
                android:text="XX"/>

            <ToggleButton
                android:id="@+id/xx"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/main_toggle"
                android:checked="false"
                android:textOff=""
                android:textOn="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/my_text"
                android:text="CC"/>

            <ToggleButton
                android:id="@+id/cc"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/main_toggle"
                android:checked="false"
                android:textOff=""
                android:textOn="" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>