<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.explosiverobot.activity.TaskActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_120"
        android:background="@color/color_top_background"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_top_title" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <android.opengl.GLSurfaceView
                android:id="@+id/gl_surface_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:longClickable="true" />

            <com.example.explosiverobot.threed.DrawSurfaceView
                android:id="@+id/draw_suface_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/task_bg"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_model"
                        style="@style/task_top_tv_selector"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="3D模型" />

                    <View style="@style/task_vertical_line" />

                    <TextView
                        android:id="@+id/tv_map"
                        style="@style/task_top_tv_unselector"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="地图" />
                </LinearLayout>


                <RelativeLayout
                    android:id="@+id/re_model"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RadioGroup
                        android:id="@+id/rg_tele"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_marginBottom="5dp"
                        android:layout_marginStart="10dp"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/rb_tele1"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            style="@style/CustomRadioBtn"
                            android:checked="true"
                            android:text="摄像机1"/>

                        <RadioButton
                            android:id="@+id/rb_tele2"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            style="@style/CustomRadioBtn"
                            android:text="摄像机2" />

                        <RadioButton
                            android:id="@+id/rb_tele3"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            style="@style/CustomRadioBtn"
                            android:text="摄像机3" />

                        <RadioButton
                            android:id="@+id/rb_tele4"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            style="@style/CustomRadioBtn"
                            android:text="摄像机4" />
                    </RadioGroup>
                </RelativeLayout>

                <com.amap.api.maps.MapView
                    android:id="@+id/map_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"

                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_drive"
                        style="@style/task_bottom_tv_selector"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="3D模型" />

                    <View style="@style/task_vertical_line" />

                    <TextView
                        android:id="@+id/tv_control"
                        style="@style/task_bottom_tv_unselector"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="操纵" />

                    <View style="@style/task_vertical_line" />

                    <TextView
                        android:id="@+id/tv_inspect"
                        style="@style/task_bottom_tv_unselector"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="检查" />
                </LinearLayout>

                <View style="@style/task_line" />

                <include layout="@layout/include_drive" />

                <RelativeLayout
                    android:id="@+id/re_control"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="control" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/re_inspect"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="inspect" />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
