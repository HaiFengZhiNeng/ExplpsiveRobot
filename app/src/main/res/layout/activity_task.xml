<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.explosiverobot.activity.TaskActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="?attr/colorPrimary">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_searchCamera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="搜索摄像头"
                android:visibility="gone"
                />

        </LinearLayout>
        <ImageView
            android:id="@+id/image_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_top_title" />

        <LinearLayout
            android:id="@+id/ll_signal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/image_title"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="信号："
                android:textColor="@color/color_white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_signal1"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:background="@color/signal" />

            <TextView
                android:id="@+id/tv_signal2"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:background="@color/signal" />

            <TextView
                android:id="@+id/tv_signal3"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:background="@color/signal" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_electricity"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/ll_signal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="电量："
                android:textColor="@color/color_white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_electricity"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="40%"
                android:textColor="@color/color_white"
                android:textSize="12sp" />

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <android.opengl.GLSurfaceView
                android:id="@+id/gl_surface_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:longClickable="true" />

            <com.example.explosiverobot.view.surface.DrawSurfaceView
                android:id="@+id/draw_suface_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <com.example.explosiverobot.view.weiget.CircleViewByImage
                android:id="@+id/control_circle_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="50dp"
                android:layout_marginLeft="50dp" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/task_bg"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_model"
                        style="@style/task_top_tv_selector"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="相机控制" />

                    <View style="@style/task_vertical_line" />

                    <TextView
                        android:id="@+id/tv_map"
                        style="@style/task_top_tv_unselector"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="地图" />

                    <View style="@style/task_vertical_line" />

                    <TextView
                        android:id="@+id/tv_util"
                        style="@style/task_top_tv_unselector"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="工具" />
                </LinearLayout>


                <RelativeLayout
                    android:id="@+id/re_model"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RadioGroup
                        android:id="@+id/rg_tele"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/rb_tele1"
                            style="@style/CustomRadioBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:checked="true"
                            android:text="摄像机1" />

                        <RadioButton
                            android:id="@+id/rb_tele2"
                            style="@style/CustomRadioBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="摄像机2" />

                        <RadioButton
                            android:id="@+id/rb_tele3"
                            style="@style/CustomRadioBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="摄像机3" />

                        <RadioButton
                            android:id="@+id/rb_tele4"
                            style="@style/CustomRadioBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="摄像机4" />
                    </RadioGroup>

                    <RelativeLayout
                        android:id="@+id/rl_ip_control"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:layout_toRightOf="@+id/rg_tele">

                        <LinearLayout
                            android:id="@+id/ll_direction"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true">

                            <ImageButton
                                android:id="@+id/ib_hori_tour"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="10dp"
                                android:background="@color/task_deepblue"
                                android:src="@mipmap/ptz_hori_tour" />

                            <ImageButton
                                android:id="@+id/ib_vert_tour"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:background="@color/task_deepblue"
                                android:src="@mipmap/ptz_vert_tour" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_camera_state"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:text="未知"
                            android:gravity="center"
                            android:layout_below="@+id/ll_direction"
                            />
                    </RelativeLayout>

                </RelativeLayout>

                <com.amap.api.maps.MapView
                    android:id="@+id/map_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/re_util"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_mian_right"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="照明灯"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/dimen_32" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="前"
                                android:textSize="14sp" />

                            <ToggleButton
                                android:id="@+id/tog_front"
                                android:layout_width="60dp"
                                android:layout_height="25dp"
                                android:layout_marginLeft="5dp"
                                android:background="@drawable/main_toggle"
                                android:checked="false"
                                android:textOff=""
                                android:textOn="" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="后"
                                android:textSize="14sp" />

                            <ToggleButton
                                android:id="@+id/tog_back"
                                android:layout_width="60dp"
                                android:layout_height="25dp"
                                android:layout_marginLeft="5dp"
                                android:background="@drawable/main_toggle"
                                android:checked="false"
                                android:textOff=""
                                android:textOn="" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_drive"
                        style="@style/task_bottom_tv_selector"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="驾驶" />

                    <View style="@style/task_vertical_line" />

                    <TextView
                        android:id="@+id/tv_control"
                        style="@style/task_bottom_tv_unselector"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="操纵" />

                    <View style="@style/task_vertical_line" />

                    <TextView
                        android:id="@+id/tv_inspect"
                        style="@style/task_bottom_tv_unselector"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="检查" />
                </LinearLayout>

                <View style="@style/task_line" />

                <include layout="@layout/include_drive" />

                <include layout="@layout/include_control" />

                <include layout="@layout/include_inspect" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
